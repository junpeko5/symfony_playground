<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {% for blog_post in blog_posts %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice"><title>{{ blog_post.title}}</title><rect fill="#55595c" width="100%" height="100%" /><text fill="#eceeef" dy=".3em" x="50%" y="50%">サムネイル</text></svg>
                        <div class="card-body">
                            <div class="card-text">{{ blog_post.content}}</div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('show_blog_post_by_slug', {'slug': blog_post.slug}) }}" class="btn btn-sm btn-outline-secondary">続きを読む</a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">編集</button>
                                </div>
                                <small class="text-muted">更新日：{{ blog_post.updatedAt | date('Y/m/d')}}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
